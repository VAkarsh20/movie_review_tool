  direction {
    director {
      name: "Glenn Ficarra"
    }
    director {
      name: "John Requa"
    }
    comments: "Decent Direction (Uses the 2000s/early-2010s Rom-Com template to help drive the story forward, allows the ensemble to use their talents as it seems like they are taking a step back)"
  }
  acting {
    actor {
      name: "Steve Carell"
      comments: "Pretty Good from Steve Carell (Plays a very typical Steve Carell character, so pulls a lot from experience to play the role)"
    }
    actor {
      name: "Ryan Gosling"
      comments: "Pretty Good from Ryan Gosling (Really uses his charm and charisma to guide his performance)"
    }
